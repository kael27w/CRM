
{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": ".", 
      "noEmit": false,
      "sourceMap": true, 
  
  
      "module": "NodeNext", 
      "moduleResolution": "NodeNext",
      "esModuleInterop": true, 
  
    
      "target": "ES2022",
      "strict": true, 
      "skipLibCheck": true, 
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true, 
  
      "lib": ["ESNext"], 
      "types": ["node"]
    },
    "include": [
      "server/**/*.ts", 
      "shared/**/*.ts" 
    ],
    "exclude": [
      "node_modules",
      "dist", 
      "client", 
      "server/tests" 
    ]
  }